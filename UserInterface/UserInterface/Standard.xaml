        <!-- 
                Playlist Grid 
            -->
        <Grid x:Name="GridPlaylist" Grid.Column="2" Margin="5" Style="{DynamicResource style_PlaylistGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <!--<RowDefinition x:Uid="RowDefinition_38" Height="*"/>-->
            </Grid.RowDefinitions>
            
            <TextBox Localization.Attributes="$Content(Unreadable Unmodifiable)" x:Uid="textBoxSearch" HorizontalAlignment="Right" Width="100" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Height="18" Margin="0 0 30 0" x:Name="textBoxSearch" TextChanged="textBoxSearch_TextChanged" Style="{DynamicResource searchBox}"/>
            <Button IsTabStop="False" x:Uid="buttonSearch" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="1" Width="Auto" Height="18" Margin="0 0 0 0" x:Name="buttonSearch" Style="{DynamicResource buttonSearch}" Click="buttonSearch_Click">
                <ButtonBase.Content>Search</ButtonBase.Content>
                <ButtonBase.ToolTip>
                    <ToolTip Style="{DynamicResource tooltip}">
                        <Label x:Uid="ToolTipSearchClear" Style="{DynamicResource tooltipLabel}">Clear Search</Label>
                    </ToolTip>
                </ButtonBase.ToolTip>
            </Button>
            
            <ListView IsTabStop="False" ItemContainerStyle="{DynamicResource listViewItem}" AllowDrop="True" Grid.Row="2" Grid.ColumnSpan="3" SizeChanged="listView_SizeChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Extended" MouseDoubleClick="listView_MouseDoubleClick" ItemsSource="{Binding PlayListRefProp}" x:Name="listView" KeyUp="listView_KeyUp" Style="{DynamicResource playlistListView}">
                <ListView.View>
                    <GridView x:Name="gv"  VirtualizingStackPanel.IsVirtualizing="True" >
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn x:Uid="GridViewColumn_1" Width="0" Header="Titel" DisplayMemberBinding="{Binding artistAndtitle}"/>
                        <GridViewColumn x:Uid="GridViewColumn_2" Width="0" Header="Länge" DisplayMemberBinding="{Binding length}"/>
                    </GridView>
                </ListView.View>
                <ListView.ContextMenu>
                    <ContextMenu Style="{DynamicResource style_PlaylistContext}">
                            <MenuItem x:Uid="MenuItem_1" Header="Add file" Click="buttonOpenFileClick" Style="{DynamicResource contextMenuItem}"/>
                            <MenuItem x:Uid="MenuItem_2" Header="Add folder" Click="buttonOpenFolderClick" Style="{DynamicResource contextMenuItem}"/>
                            <MenuItem x:Uid="MenuItem_3" Header="Sort"  Style="{DynamicResource contextMenuItem}">
                                <MenuItem x:Uid="MenuItem_4" Header="Title"  Style="{DynamicResource contextMenuItem}"/>
                                <MenuItem x:Uid="MenuItem_5" Header="Artist" Style="{DynamicResource contextMenuItem}"/>
                            </MenuItem>
                            <MenuItem x:Uid="MenuItem_6" Header="Delete" Click="MenuItemDelete_Click" Style="{DynamicResource contextMenuItem}"/>
                   </ContextMenu>
                        
                </ListView.ContextMenu>
            </ListView>

            <!-- 
                Label to show search results, 
                only visible if search is active
            -->
            <Label x:Uid="labelSearchResult" x:Name="labelSearchResult" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Visibility="Hidden" Style="{DynamicResource style_labelSearchResult}">Search Results</Label>
            <ListView IsTabStop="False" Margin="2 30 2 2" ItemContainerStyle="{DynamicResource listViewItem}" Visibility="Hidden" AllowDrop="True" Grid.Row="2" Grid.ColumnSpan="3" SizeChanged="searchView_SizeChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Extended" x:Name="searchView" Foreground="Black"   BorderThickness="0"  MouseDoubleClick="searchView_MouseDoubleClick"  Style="{DynamicResource playlistListView}">
                <ListView.View>
                    <GridView x:Name="searchgv" VirtualizingStackPanel.IsVirtualizing="True" >
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Localization.Attributes="$Content(Unreadable Unmodifiable)" x:Uid="GridViewColumn_3" Width="0" Header="Titel" DisplayMemberBinding="{Binding artistAndtitle}"  />
                        <GridViewColumn Localization.Attributes="$Content(Unreadable Unmodifiable)" x:Uid="GridViewColumn_4" Width="0" Header="Länge" DisplayMemberBinding="{Binding length}"/>
                    </GridView>
                </ListView.View>
                    
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Uid="ListViewContextMenuSearchClear" Header="Clear Search" Click="buttonSearch_Click"/>
                        <MenuItem x:Uid="ListViewContextMenuMoveToPlayPos" Header="Move To Playing Position" Click="MoveToPlayingPosition_Click" />
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>

            <WrapPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" FlowDirection="LeftToRight" HorizontalAlignment="Right">
