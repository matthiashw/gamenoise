                        </ToolTip>
                    </ButtonBase.ToolTip>
                </Button>

                <Button IsTabStop="False" x:Uid="buttonOpenFolder" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0 0 2 0" Height="20" x:Name="buttonOpenFolder" Width="Auto" HorizontalAlignment="Right" Click="buttonOpenFolderClick" Style="{DynamicResource buttonAddFolder}">
                    <ButtonBase.Content>add a Folder</ButtonBase.Content>
                    <ButtonBase.ToolTip>
                        <ToolTip Style="{DynamicResource tooltip}">
                            <Label x:Uid="ToolTipAddFolder" Style="{DynamicResource tooltipLabel}">add Folder to Playlist</Label>
                        </ToolTip>
                    </ButtonBase.ToolTip>
                </Button>
            </WrapPanel>
            
            <WrapPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                <Label x:Uid="labelPlaylist" x:Name="labelPlaylist" Style="{DynamicResource style_labelPlaylist}">Playlist:</Label>
                <Label x:Uid="labelPlaylistName" x:Name="labelPlaylistName" Style="{DynamicResource style_labelPlaylist}">- no name</Label>
            </WrapPanel>
            
            <WrapPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                <Label x:Uid="labelTotalTime" x:Name="labelTotalTime" Style="{DynamicResource style_labelTotalTime}" >Total:</Label>
                <Label x:Uid="labelTotalTime" x:Name="labelTotalTimeTime" Style="{DynamicResource style_labelTotalTime}" >00:00</Label>
            </WrapPanel>
            
            <WrapPanel Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="5" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                <Button IsTabStop="False" x:Uid="buttonNewPlaylist" HorizontalAlignment="Right" Margin="0 0 0 0" Height="21" Name="buttonNewPlaylist" Width="Auto" Click="buttonNewPlaylistClick" Style="{DynamicResource buttonNewPlaylist}">
                    <ButtonBase.Content>New</ButtonBase.Content>
                    <ButtonBase.ToolTip>
                        <ToolTip Style="{DynamicResource tooltip}">
                            <Label x:Uid="ToolTipNewPlaylist" Style="{DynamicResource tooltipLabel}">New Playlist</Label>
                        </ToolTip>
                    </ButtonBase.ToolTip>
                </Button>
                <Button IsTabStop="False" x:Uid="buttonOpenPlaylist" HorizontalAlignment="Right" Margin="0 0 0 0" Height="21" x:Name="buttonOpenPlaylist" Width="Auto" Click="buttonOpenPlaylistClick" Style="{DynamicResource buttonPlLoad}">
                    <ButtonBase.Content>Open</ButtonBase.Content>
                    <ButtonBase.ToolTip>
                        <ToolTip Style="{DynamicResource tooltip}">
                            <Label x:Uid="ToolTipOpenPlaylist" Style="{DynamicResource tooltipLabel}">Open Playlist</Label>
                        </ToolTip>
                    </ButtonBase.ToolTip>
                </Button>
                <Button IsTabStop="False" x:Uid="buttonSavePlaylist" HorizontalAlignment="Right" Margin="0 0 0 0" Height="21" x:Name="buttonSavePlaylist" Width="Auto" Click="buttonSavePlaylistClick" Style="{DynamicResource buttonPlSave}">
                    <ButtonBase.Content>Save</ButtonBase.Content>
                    <ButtonBase.ToolTip>
                        <ToolTip Style="{DynamicResource tooltip}">
                            <Label x:Uid="ToolTipSavePlaylist" Style="{DynamicResource tooltipLabel}">Save Playlist</Label>
                        </ToolTip>
                    </ButtonBase.ToolTip>
                </Button>
            </WrapPanel>
            
            
            
            
        </Grid><!-- /Playlist Grid -->
    </Grid>
