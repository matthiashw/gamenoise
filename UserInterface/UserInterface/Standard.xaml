                <Button IsTabStop="False" x:Uid="buttonOpenFile" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0 0 0 0" Height="20" x:Name="buttonOpenFile" Width="Auto" HorizontalAlignment="Right" Click="buttonOpenFileClick" Style="{DynamicResource buttonAddFile}">
